<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.balda.listtest">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.BreweryListActivity" />
        <activity android:name=".Activities.SignInActivity" />
        <activity android:name=".Activities.AddBreweryActivity" />
        <activity android:name=".Activities.BreweryDetailViewActivity" />
        <activity android:name=".Activities.BeerListActivity" />
        <activity android:name=".Activities.BeerDetailViewActivity"></activity>
    </application>

</manifest>