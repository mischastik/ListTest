<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_beer_detail_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.balda.listtest.Activities.BeerDetailViewActivity">

    <ImageView
        android:layout_width="100dp"
        app:srcCompat="@mipmap/ic_logo_default"
        android:id="@+id/imageViewBeerDetailBreweryLogo"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewBeerDetailBreweryName"
        tools:text="Neder"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageViewBeerDetailBreweryLogo"
        app:layout_constraintTop_toTopOf="@+id/imageViewBeerDetailBreweryLogo"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewBeerDetailBeerName"
        tools:text="Schwarze Anna"
        android:fontFamily="serif"
        android:typeface="serif"
        android:textSize="24sp"
        android:textColor="@color/colorAccent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageViewBeerDetailBreweryLogo"
        app:layout_constraintTop_toBottomOf="@+id/textViewBeerDetailBreweryName" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBarBeerDetailAverageRating"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewBeerDetailBreweryLogo"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewBeerDetailBeerType"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewBeerDetailBeerName"
        app:layout_constraintLeft_toLeftOf="@+id/textViewBeerDetailBeerName"
        tools:text="Dunkles" />
</android.support.constraint.ConstraintLayout>
