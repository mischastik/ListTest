<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewBeerListEntyName"
        tools:text="Schwarze Anna"
        tools:layout_editor_absoluteY="4dp"
        tools:layout_editor_absoluteX="4dp"
        android:fontFamily="serif"
        android:textSize="18sp"
        android:textStyle="normal|italic" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBarBeerListEntry"
        app:layout_constraintTop_toBottomOf="@+id/textViewBeerListEntyName"
        android:layout_marginTop="4dp"
        android:numStars="5"
        android:rating="3.5"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTestersLabel"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewBeerListEntyName"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/testers"
        app:layout_constraintRight_toLeftOf="@+id/ratingBarBeerListEntry"
        android:layout_marginEnd="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTestersNumber"
        app:layout_constraintTop_toBottomOf="@+id/textViewTestersLabel"
        app:layout_constraintLeft_toLeftOf="@+id/textViewTestersLabel"
        app:layout_constraintRight_toRightOf="@+id/textViewTestersLabel"
        android:textSize="24sp"
        tools:text="0" />
</android.support.constraint.ConstraintLayout>