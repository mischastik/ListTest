<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        android:id="@+id/textViewBeerListEntryBreweryName"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="Neder" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewBeerListEntyName"
        tools:text="Schwarze Anna"
        app:layout_constraintLeft_toLeftOf="@+id/textViewBeerListEntryBreweryName"
        android:fontFamily="serif"
        android:textSize="18sp"
        android:textStyle="normal|italic"
        app:layout_constraintTop_toBottomOf="@+id/textViewBeerListEntryBreweryName" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBarBeerListEntry"
        app:layout_constraintTop_toBottomOf="@+id/textViewBeerListEntryItemType"
        android:numStars="5"
        android:rating="3.5"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:isIndicator="true"
        tools:isIndicator="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTestersLabel"
        app:layout_constraintTop_toBottomOf="@+id/textViewBeerListEntryItemType"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/testers"
        app:layout_constraintRight_toLeftOf="@+id/ratingBarBeerListEntry"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.58"
        android:layout_marginTop="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTestersNumber"
        app:layout_constraintTop_toBottomOf="@+id/textViewTestersLabel"
        app:layout_constraintLeft_toLeftOf="@+id/textViewTestersLabel"
        app:layout_constraintRight_toRightOf="@+id/textViewTestersLabel"
        android:textSize="24sp"
        tools:text="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewBeerListEntryItemType"
        app:layout_constraintTop_toBottomOf="@+id/textViewBeerListEntyName"
        android:layout_marginStart="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="Dunkles" />

</android.support.constraint.ConstraintLayout>